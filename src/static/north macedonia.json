        "Pay&Tax": [
            {
                "title": "Minimum Wage Requirements",
                "data": [
                    {
                        "type": "text",
                        "data": "The minimum monthly NET salary amount is 18,000 MKD, per full time employee The minimum monthly GROSS salary (net salary + personal income tax + social contributions) is 26,422 MKD, per full time employee."
                    }
                ]
            },
            {
                "title": "Individual Income Tax",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "The individual income tax ranges from 10% to 18%. Income tax is calculated according to progressive rates. Multiple additional factors may impact overall rates such as the household status and the number of children."
                    },
                    {
                        "type": "table",
                        "data": [
                            {
                                "Gross Annual Income": "Up to MKD - 1,080,000",
                                "Tax Rate (%)": "10%"
                            },
                            {
                                "Gross Annual Income": "Over MKD - 1,080,000",
                                "Tax Rate (%)": "18%"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Employer Cost",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "The employer cost is generally estimated at 28% of the employee salary."
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Pension Fund Contribution - 18.8%"
                            },
                            {
                                "text": "Health insurance contribution - 7.5%"
                            },
                            {
                                "text": "Professional Health - 0.5%"
                            },
                            {
                                "text": "Unemployment Insurance - 1.2%"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Overtime Pay & Maximum Hours",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Standard working hours are 8 hours per day, 40 hours per week. The standard workweek is from Monday to Friday."
                    },
                    {
                        "type": "paragraph",
                        "data": "Overtime payment is mandatory and may be included in the salary. Hours outside of standard work hours are considered overtime. For additional hours, employees are paid:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "135% of the hourly rate on standard working hours"
                            },
                            {
                                "text": "135% of the hourly rate on night working hours"
                            },
                            {
                                "text": "150% of the hourly rate on rest days"
                            }
                        ]
                    }
                ]
            }
        ],
        "Leave Policy": [
            {
                "title": "Maternity Leave",
                "data": [
                    {
                        "type": "text",
                        "data": "Pregnant employees who have worked for 6 consecutive months are entitled to 9 months for one baby, 15 months for twins/triplets of paid leave. The employee will receive 100% of their average salary from the last 12 months during this period, and Social Security will be responsible for this pay."
                    }
                ]
            },
            {
                "title": "Paternity Leave",
                "data": [
                    {
                        "type": "text",
                        "data": "Employees whose partner has finished the 45 initial days of maternity leave are entitled to 7 working days of paid paternity leave. The employee will receive 100% of their average monthly salary from the last 12 months during this period, and Social Security will be responsible for this pay."
                    }
                ]
            },
            {
                "title": "Parental Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Mothers are entitled to 3 months of parental leave. This leave can be used up until the child is age 3. The leave is unpaid."
                    },
                    {
                        "type": "paragraph",
                        "data": "Parental leave can't be extended."
                    }
                ]
            },
            {
                "title": "Sick Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Employees are entitled to paid sick leave for up to 30 days. This leave is paid at different rates and by different payers depending upon length:"
                    },
                    {
                        "type": "table",
                        "data": [
                            {
                                "Period": "0 - 15 days",
                                "Pay": "70%",
                                "Payer": "Employer"
                            },
                            {
                                "Period": "16 - 30 days",
                                "Pay": "90% of base salary",
                                "Payer": "Employer"
                            },
                            {
                                "Period": "Over 30 days",
                                "Pay": "70%",
                                "Payer": "Social Security"
                            }
                        ]
                    }
                ]
            }
        ],
        "Termination": [
            {
                "title": "Termination Requirements",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Terminations must respect complex rules and the rules of an employee’s employment country. The off-boarding is always handled by the Employer with the primary stakeholders. It may include ad-hoc fees as well as required or recommended steps on specific termination cases."
                    },
                    {
                        "type": "paragraph",
                        "data": "Terminations in North Macedonia can be complex. There is no at-will termination in North Macedonia for employers and termination must be done for just cause."
                    },
                    {
                        "type": "paragraph",
                        "data": "Compliant terminations include:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Voluntarily by the employee"
                            },
                            {
                                "text": "By mutual agreement"
                            },
                            {
                                "text": "Unilaterally by the employer based on:",
                                "children": [
                                    {
                                        "text": "Probation period"
                                    },
                                    {
                                        "text": "Objective grounds"
                                    },
                                    {
                                        "text": "Disciplinary dismissal"
                                    },
                                    {
                                        "text": "Performance due to unsuitability for the job"
                                    }
                                ]
                            },
                            {
                                "text": "By the expiration of the contract"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Notice Period",
                "data": [
                    {
                        "type": "text",
                        "data": "The minimum notice period is 30 days. It can be increased to a maximum of 90 days if agreed in the Employment Agreement."
                    }
                ]
            },
            {
                "title": "Severance for Employees",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "In North Macedonia, all employees who are made redundant are entitled to severance pay. Severance pay is varied depending on the length of services as follows:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "1 month of net salary per year of service up to 5 years."
                            },
                            {
                                "text": "2.5 net salaries per year of service up to 10 years."
                            },
                            {
                                "text": "3.5 net salaries per year of service up to 15 years."
                            },
                            {
                                "text": "4.5 net salaries per year of service up to 20 years."
                            },
                            {
                                "text": "6 net salaries per year of service up to 25 years."
                            },
                            {
                                "text": "7 net salaries per year of service over 25 years."
                            }
                        ]
                    }
                ]
            }
        ],
