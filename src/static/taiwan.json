                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Continuous employment for less than 3 months - No notice"
                            },
                            {
                                "text": "Continuous employment for at least 3 months but less than 1 year - 10 days"
                            },
                            {
                                "text": "Continuous employment for at least 1 year but less than 3 years - 20 days"
                            },
                            {
                                "text": "Continuous employment for at least 3 years - 30 days"
                            }
