        "Pay&Tax": [
            {
                "title": "Minimum Wage Requirements",
                "data": [
                    {
                        "type": "text",
                        "data": "The minimum wage is PEN 930 per month."
                    }
                ]
            },
            {
                "title": "Individual Income Tax",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "The individual income tax ranges from 8% to 30%. Income tax is calculated according to progressive rates. Multiple additional factors may impact overall rates such as the household status and the number of children."
                    },
                    {
                        "type": "paragraph",
                        "data": "In Peru, the income tax rate is calculated based on units. Each taxing unit represents an annual income tax of PEN 4,400."
                    },
                    {
                        "type": "table",
                        "data": [
                            {
                                "Tax Unit (UIT)": "Up to 5 UIT",
                                "Tax Rate (%)": "8%"
                            },
                            {
                                "Tax Unit (UIT)": "Up to 20 UIT",
                                "Tax Rate (%)": "14%"
                            },
                            {
                                "Tax Unit (UIT)": "Up to 35 UIT",
                                "Tax Rate (%)": "17%"
                            },
                            {
                                "Tax Unit (UIT)": "Up to 45 UIT",
                                "Tax Rate (%)": "20%"
                            },
                            {
                                "Tax Unit (UIT)": "Over 45 UIT",
                                "Tax Rate (%)": "30%"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Employer Cost",
                "data": [
                    {
                        "type": "text",
                        "data": "The employer cost is generally estimated at 13% of the employee salary."
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Public Health Insurance -  9%"
                            },
                            {
                                "text": "Worker Compensation Insurance - 4%"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Overtime Pay & Maximum Hours",
                "data": [
                    {
                        "type": "text",
                        "data": "Overtime payment is mandatory for employees with working hours established in the employment agreement. Hours outside of standard work hours are considered overtime. For additional hours, employees are paid:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "125% of the hourly rate, the first two hours"
                            },
                            {
                                "text": "135% of the hourly rate, the following hours"
                            }
                        ]
                    },
                    {
                        "type": "text",
                        "data": "Employees working in executive positions may be excluded from overtime payment."
                    }
                ]
            }
        ],
        "Leave Policy": [
            {
                "title": "Maternity Leave",
                "data": [
                    {
                        "type": "text",
                        "data": "Employees, who have worked for 90 consecutive days, are entitled to 98 days of paid leave. 49 days must be taken before the child's birth. The employee will receive full salary during this period, and the public health insurance institution (Essalud) will be responsible for this pay."
                    },
                    {
                        "type": "text",
                        "data": "The employee may extend leave additional 30 days, on special cases with a certificate from the doctor/midwife."
                    }
                ]
            },
            {
                "title": "Paternity Leave",
                "data": [
                    {
                        "type": "text",
                        "data": "Employees are entitled to 10 working days of paid paternity leave that must start the date the child is born.  The employee will receive 100% of the salary during this period, and the employer will be responsible for this pay."
                    },
                    {
                        "type": "text",
                        "data": "The employee may extend leave on specific cases with approval from the doctor."
                    }
                ]
            },
            {
                "title": "Parental Leave",
                "data": [
                    {
                        "type": "text",
                        "data": "In Peru, no law covers parental leave. However, employees may be entitled to maternity leave and paternity leave."
                    }
                ]
            },
            {
                "title": "Sick Leave",
                "data": [
                    {
                        "type": "text",
                        "data": "Employees are entitled to paid sick leave for up to 20 days paid by the employer. After this period, if sickness continues, the employee will be insured by the health insurance institution (Essalud) and paid full salary up to a year."
                    }
                ]
            }
        ],
        "Termination": [
            {
                "title": "Termination Requirements",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Terminations must respect complex rules and the rules of an employee’s employment country. The off-boarding is always handled by the Employer with the primary stakeholders. It may include ad-hoc fees as well as required or recommended steps on specific termination cases."
                    },
                    {
                        "type": "paragraph",
                        "data": "Terminations in Peru can be complex. There is no at-will termination in Peru for employers [outside the probation period] and termination must be done for just cause. Compliant terminations include:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Voluntarily by the employee"
                            },
                            {
                                "text": "By mutual agreement"
                            },
                            {
                                "text": "Unilaterally by the employer based on:",
                                "children": [
                                    {
                                        "text": "Probation period"
                                    },
                                    {
                                        "text": "Objective grounds"
                                    },
                                    {
                                        "text": "Disciplinary dismissal"
                                    }
                                ]
                            },
                            {
                                "text": "By expiration of the contract"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Notice Period",
                "data": [
                    {
                        "type": "text",
                        "data": "The standard notice period is 30 days and will vary depending on the reason of the termination."
                    }
                ]
            },
            {
                "title": "Severance for Employees",
                "data": [
                    {
                        "type": "text",
                        "data": "In Peru employees who are terminated due to arbitrary -unjustified- dismissal are entitled to severance pay. Severance pay is 45 days of salary per year of service up to 12 months base compensation."
                    }
                ]
            }
        ],
        "Statutory time off": [
            {
                "title": "Paid Time Off",
                "data": [
                    {
                        "type": "text",
                        "data": "Both full-time employees are entitled to 30 calendar days of paid time off (PTO) a year. PTO accrues monthly at 2,5 days per month. Employees are eligible for annual leave after 12 months of work."
                    },
                    {
                        "type": "text",
                        "data": "Part-time employees are entitled to six calendar days of paid time off a year."
                    }
                ]
            },
            {
                "title": "Public Holidays",
                "data": [
                    {
                        "type": "text",
                        "data": "Peru celebrates both 10 national and multiple regional holidays based on the location of the employee."
                    },
                    {
                        "type": "text",
                        "data": "National public holidays include:"
                    },
                    {
                        "type": "text",
                        "data": "Good Friday\nLabor Day\nSaint Peter and Saint Paul Day\nNational Holidays\nSanta Rosa de Lima\nBattle of Angamos\nAll Saints' Day\nDay of the Immaculate Conception\nBattle of Ayacucho- Non-working day public sector\nChristmas Day"
                    }
                ]
            }
        ],
        "Onboarding": [
            {
                "title": "Onboarding",
                "data": [
                    {
                        "type": "text",
                        "data": "Onboarding takes three business days."
                    }
                ]
            }
        ],
        "Additional info": [
            {
                "title": "Employment Contract Details",
                "data": [
                    {
                        "type": "text",
                        "data": "Contracts must be in Spanish and can be bilingual. They must be in writing and signed by both parties."
                    },
                    {
                        "type": "text",
                        "data": "A contract must include:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Name"
                            },
                            {
                                "text": "Start date"
                            },
                            {
                                "text": "Length of the employment"
                            },
                            {
                                "text": "Job description"
                            },
                            {
                                "text": "Termination conditions"
                            }
                        ]
                    },
                    {
                        "type": "text",
                        "data": "Contract Backdating is not allowed."
                    }
                ]
            },
            {
                "title": "Probation Period",
                "data": [
                    {
                        "type": "text",
                        "data": "Probation periods are not mandatory. The minimum probation period is 30 days and the maximum probation period is 90 days (three months). Probationary periods can be renewed for between 180 days and one year depending on the employee's job position, with previous approval from both parties."
                    }
                ]
            }
        ]
    }
}