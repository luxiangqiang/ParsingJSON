            {
                "title": "Overtime Pay & Maximum Hours",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Standard working hours are 8 hours per day and 40 hours per week. The standard work week is from Monday to Friday."
                    },
                    {
                        "type": "paragraph",
                        "data": "Overtime pay is mandatory and is not included in the salary. Worked hours outside of standard work hours are considered overtime. Employees can work a maximum of 2 hours of overtime per day. For overtime hours, employees are paid:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "125% of the hourly rate for the first hour."
                            },
                            {
                                "text": "137.5% of the hourly rate for the following hours."
                            },
                            {
                                "text": "150% of the hourly rate for weekends and bank holidays."
                            }
                        ]
                    }
                ]
            }
        ],
        "Leave Policy": [
            {
                "title": "Maternity Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Pregnant employees who have contributed to Social Security for the past six months are entitled to 120 or 150 days of paid leave. 30 days are usually taken before the child's birth. The remaining days can be divided into two periods of time. The employee will receive 80 - 100% of the salary during this period depending upon the length of leave. Social Security will be responsible for this pay."
                    },
                    {
                        "type": "paragraph",
                        "data": "The employee can extend leave additional 90 days at 25% pay."
                    }
                ]
            },
            {
                "title": "Paternity Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Employees who have contributed to Social Security for the past six months are entitled to 20 days of paid paternity leave and five additional days of optional leave. The first five days must be taken after the child's birth and the remaining 15 days, consecutive or not, must be taken within the following six weeks. The employee will receive 100% of the salary during this period, and Social Security will be responsible for this pay."
                    },
                    {
                        "type": "paragraph",
                        "data": "The employee can extend leave an additional 90 days at 25% pay."
                    }
                ]
            },
            {
                "title": "Parental Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Employees are entitled to 120 working days of parental leave. Both parents can decide how to distribute the time off, which should be taken 30 days after maternity leave. Either parent can take parental leave. Social Security will pay 80-100% of the salary during this period, depending on how the leave was distributed between the partners."
                    }
                ]
            },
            {
                "title": "Sick Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Employees are entitled to paid sick leave for up to 1095 days if they have contributed for the past 6 months to Portuguese Social Security. The first 3 days are unpaid and considered as a qualifying period. This leave is paid at different rates and by different payers depending upon the length:"
                    },
                    {
                        "type": "table",
                        "data": [
                            {
                                "Period": "0 - 3 days",
                                "Pay": "0%",
                                "Payer": "N/A"
                            },
                            {
                                "Period": "3 - 30 days",
                                "Pay": "55% of base salary",
                                "Payer": "Social Security"
                            },
                            {
                                "Period": "31 - 90 days",
                                "Pay": "60% of base salary",
                                "Payer": "Social Security"
                            },
                            {
                                "Period": "91 - 365 days",
                                "Pay": "70% of base salary",
                                "Payer": "Social Security"
                            },
                            {
                                "Period": "+365 days",
                                "Pay": "75% of base salary",
                                "Payer": "Social Security"
                            }
                        ]
                    }
                ]
            }
        ],
        "Termination": [
            {
                "title": "Termination Requirements",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Terminations must respect complex rules and the rules of an employee’s employment country. The off-boarding is always handled by the Employer with the primary stakeholders. It may include ad-hoc fees as well as required or recommended steps on specific termination cases."
                    },
                    {
                        "type": "paragraph",
                        "data": "Termination in Portugal can be complex and must be based on performance or redundancy reasons (e.g. serious cause, unfit for the role, extinction of the role)."
                    },
                    {
                        "type": "paragraph",
                        "data": "Compliant terminations include:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Voluntarily by the employee"
                            },
                            {
                                "text": "By mutual agreement"
                            },
                            {
                                "text": "Unilaterally by the employer based on:",
                                "children": [
                                    {
                                        "text": "Objective grounds."
                                    },
                                    {
                                        "text": "Disciplinary dismissal"
                                    },
                                    {
                                        "text": "Unsuitability for the job position."
                                    }
                                ]
                            },
                            {
                                "text": "By the expiration of the contract"
                            }
                        ]
                    },
                    {
                        "type": "paragraph",
                        "data": "It is not possible to terminate a contract when the employee takes parental leave, is pregnant, or breastfeeding."
                    }
                ]
            },
            {
                "title": "Notice Period",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Notice will depend on the nature of termination, length of employment, and the contract term."
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "During the probation period",
                                "children": [
                                    {
                                        "text": "the notice period is 7 days one week."
                                    }
                                ]
                            },
                            {
                                "text": "Termination due to redundancy or unsuitability for the job by the employer:",
                                "children": [
                                    {
                                        "text": "30 days if the length of service is less than two years."
                                    },
                                    {
                                        "text": "60 days if the length of service is less than ten years."
                                    },
                                    {
                                        "text": "75 days if the length of service is ten or more years."
                                    }
                                ]
                            },
                            {
                                "text": "Voluntary termination by the employee:",
                                "children": [
                                    {
                                        "text": "30 days if the length of service is less than two years."
                                    },
                                    {
                                        "text": "60 days if the length of service is two or more years."
                                    }
                                ]
                            },
                            {
                                "text": "Termination with cause",
                                "children": [
                                    {
                                        "text": "The notice period is not mandatory."
                                    }
                                ]
                            },
                            {
                                "text": "Non-renewal of a fixed term contract:",
                                "children": [
                                    {
                                        "text": "15 days for the employer."
                                    },
                                    {
                                        "text": "8 days for the employee."
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Severance for Employees",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "In Portugal, employees who are terminated based on redundancy or unsuitability for the job are entitled to severance pay."
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "For indefinite term contracts, severance pay is 12 days of salary per year of service up to 12 months of base pay"
                            },
                            {
                                "text": "For fixed-term contracts, severance pay is 18 days per year of service"
                            }
                        ]
                    },
                    {
                        "type": "paragraph",
                        "data": "Higher severance payments may be agreed upon between employer and employee."
                    }
                ]
            }
        ],
        "Statutory time off": [
            {
                "title": "Paid Time Off",
                "data": [
                    {
                        "type": "text",
                        "data": "Both full-time and part-time employees are entitled to 22 days of paid time off (PTO) a year. Employees are eligible for annual leave after 6 months of work. Part-time employees are entitled to the same leave as full-time employees. During the first year of employment, an employee is not allowed to take more than 20 days."
                    }
                ]
            },
            {
                "title": "Public Holidays",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Portugal celebrates 14 national holidays and one regional holiday based on the employee's location."
                    },
                    {
                        "type": "paragraph",
                        "data": "National public holidays include:"
                    },
                    {
                        "type": "text",
                        "data": "New Year's Day\nGood Friday\nEaster Sunday\nFreedom Day Portugal\nLabour Day\nCorpus Christi\nPortugal Day\nAssumption Day\nRepublic Day Portugal\nAll Saints day\nIndependence Day Portugal\nImmaculate Conception\nChristmas\nShrove Tuesday"
                    }
                ]
            }
        ],
        "Onboarding": [
            {
                "title": "Onboarding",
                "data": [
                    {
                        "type": "text",
                        "data": "3 business days"
                    }
                ]
            }
        ],
        "Additional info": [
            {
                "title": "Employment Contract Details",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Contracts must be in Portuguese and can be bilingual. They must be in writing and signed by both parties."
                    },
                    {
                        "type": "paragraph",
                        "data": "The contract must include:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Name"
                            },
                            {
                                "text": "Start date"
                            },
                            {
                                "text": "Length of the employment"
                            },
                            {
                                "text": "Job description"
                            },
                            {
                                "text": "Trial period conditions"
                            },
                            {
                                "text": "Termination conditions"
                            },
                            {
                                "text": "Payment conditions for the holiday and Christmas bonus"
                            },
                            {
                                "text": "Remote work clause"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Probation Period",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Probation periods are not mandatory. The maximum probation period is 240 days. The length depends on the type of contract and seniority of the employee:"
                    },
                    {
                        "type": "paragraph",
                        "data": "Indefinite contracts:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "90 days as standard."
                            },
                            {
                                "text": "180 days for job positions with a high level of responsibility."
                            },
                            {
                                "text": "240 days for managerial positions or senior staff."
                            }
                        ]
                    }
                ]
            }
        ]
    }
}