    "quickStartGuide": {
        "Pay&Tax": [
            {
                "title": "Minimum Wage Requirements",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "In Switzerland, there is no national minimum wage by law. However, some cantons apply an hourly minimum wage:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Canton of Neuchâtel - CHF 20.77"
                            },
                            {
                                "text": "Canton of Jura - CHF 20.60"
                            },
                            {
                                "text": "Canton of Geneva - CHF 24"
                            },
                            {
                                "text": "Canton of Ticino - CHF 19"
                            },
                            {
                                "text": "Canton of Basel Stadt - CHF 21"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Individual Income Tax",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "The individual income tax ranges from 1% to 24%. Income tax is calculated according to progressive rates, location (canton) of the employee. Multiple additional factors may impact overall rates such as the household status and the number of children."
                    }
                ]
            },
            {
                "title": "Employer Cost",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "The employer cost is generally estimated between 12-20% of the employee salary. The variation will depend on the canton, age, salary, and multiple conditions."
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Retirement Capital and Disability insurance - 5.3%"
                            },
                            {
                                "text": "Unemployment insurance - 1.1%"
                            },
                            {
                                "text": "Pension fund - 7%",
                                "children": [
                                    {
                                        "text": "Total Annual Pension Cost - CHF 4,300.95"
                                    }
                                ]
                            },
                            {
                                "text": "Work Accident Insurance - 1.8%"
                            },
                            {
                                "text": "Additional accident insurance - 0.11%-0.13%"
                            },
                            {
                                "text": "Sickness Insurance - CHF 85.90",
                                "children": [
                                    {
                                        "text": "Total Annual Sickness insurance - CHF 1,030.80"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Overtime Pay & Maximum Hours",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Standard working hours are 8 hours per day, 40 hours per week. The standard workweek is from Monday to Friday. The standard workweek can vary from 38.5 to 42.5 hours."
                    },
                    {
                        "type": "paragraph",
                        "data": "Overtime payment is not mandatory and may be included in the salary, depending on what's agreed in the employment contract. Employees can work a maximum of 45-50 hours of overtime. For additional hours, employees can be paid:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "125% of the hourly rate, up to 45 hours per week for industrial sector employees, office workers, technical employees, and sales staff."
                            },
                            {
                                "text": "125% of the hourly rate, up to 50 hours per week for other sectors."
                            }
                        ]
                    }
                ]
            }
        ],
        "Leave Policy": [
            {
                "title": "Maternity Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Pregnant employees who have worked for 270 consecutive days are entitled to 14 weeks (16 weeks in the Canton of Geneva) of paid leave. Eight weeks must be taken after the child's birth. The employee will receive 80% of the salary during this period, capped at CHF 196 per day, and Social Security will be responsible for this pay. The employee can extend leave additional 14 days unpaid."
                    },
                    {
                        "type": "paragraph",
                        "data": "For Deel EOR employees, the full salary continues to be paid."
                    }
                ]
            },
            {
                "title": "Paternity Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Employees who have worked for 270 consecutive days are entitled to 10 working days of paid paternity leave. Leave must be taken within six months after the child's birth. The employee will receive 80% of the salary during this period, capped at CHF 196 per day, and Social Security will be responsible for this pay."
                    },
                    {
                        "type": "paragraph",
                        "data": "The employee can request to extend leave, and it will depend on the employer's discretion."
                    },
                    {
                        "type": "paragraph",
                        "data": "For Deel EOR employees, the full salary continues to be paid."
                    }
                ]
            },
            {
                "title": "Parental Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "In Switzerland, no law covers parental leave. However, employees may be entitled to maternity leave and paternity leave."
                    }
                ]
            },
            {
                "title": "Sick Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Employees are entitled to paid sick leave for up to 730 days in a 900 day period. The employee will receive 80% of the wage paid by the employer. Employers commonly have benefits insurance schemes to cover the payment."
                    }
                ]
            }
        ],
        "Termination": [
            {
                "title": "Termination Requirements",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Terminations must respect complex rules and the rules of an employee’s employment country. The off-boarding is always handled by the Employer with the primary stakeholders. It may include ad-hoc fees as well as required or recommended steps on specific termination cases."
                    },
                    {
                        "type": "paragraph",
                        "data": "Terminations in Switzerland can be complex and depend on the contract terms and what's agreed on between the parties."
                    },
                    {
                        "type": "paragraph",
                        "data": "Compliant terminations include:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Voluntarily by the employee"
                            },
                            {
                                "text": "By mutual agreement"
                            },
                            {
                                "text": "Unilaterally by the employer based on:",
                                "children": [
                                    {
                                        "text": "Probation period"
                                    },
                                    {
                                        "text": "Objective grounds"
                                    },
                                    {
                                        "text": "Disciplinary dismissal"
                                    },
                                    {
                                        "text": "Performance of the employee"
                                    }
                                ]
                            },
                            {
                                "text": "By the expiration of the contract"
                            }
                        ]
                    },
                    {
                        "type": "paragraph",
                        "data": "Uncompliant terminations include:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Fixed-term employment contracts before the end date."
                            },
                            {
                                "text": "Termination while the employee is ill or had an accident, they will be protected according to the length of the service:",
                                "children": [
                                    {
                                        "text": "30 days during the first year of service"
                                    },
                                    {
                                        "text": "90 days from the second to the fifth year"
                                    },
                                    {
                                        "text": "180 days from the sixth year"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "paragraph",
                        "data": "The employer must wait until the employee returns to work before leaving in all these cases. However, the employee can terminate their contract during the protection period."
                    }
                ]
            },
            {
                "title": "Notice Period",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "The minimum notice period is 30 days and will be increased according to the length of the employment."
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "30 days if the length of service is one year"
                            },
                            {
                                "text": "60 days if the length of service is between the second and the ninth year"
                            },
                            {
                                "text": "90 days if the length of service is more than ten years."
                            }
                        ]
                    },
                    {
                        "type": "paragraph",
                        "data": "During the probation, the notice is seven calendar days."
                    }
                ]
            },
            {
                "title": "Severance for Employees",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "In Switzerland, there are no statutory requirements for severance payments for employees under 50 or who have more than 20 years of seniority. During the notice period, the employee will receive standard salary wages."
                    }
                ]
            }
        ],
        "Statutory time off": [
            {
                "title": "Paid Time Off",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Full-time employees are entitled to 20 working days of paid time off (PTO) a year. PTO accrues monthly 1.66 days per month. Leave for part-time employees will be calculated with the number of weekly worked hours. Employees that are 19 years or younger are entitled to 25 working days of PTO."
                    }
                ]
            },
            {
                "title": "Public Holidays",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Switzerland celebrates both 7 national and 6 regional holidays based on the canton (member states) of the employee. National public holidays include:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "New Year's Day"
                            },
                            {
                                "text": "Good Friday"
                            },
                            {
                                "text": "Easter Monday"
                            },
                            {
                                "text": "Labor Day"
                            },
                            {
                                "text": "Ascension Day"
                            },
                            {
                                "text": "Whit Monday"
                            },
                            {
                                "text": "Corpus Christi"
                            }
                        ]
                    }
                ]
            }
        ],
        "Onboarding": [
            {
                "title": "Onboarding",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Onboarding takes 3 business days."
                    }
                ]
            }
        ],
        "Additional info": [
            {
                "title": "Employment Contract Details",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Contracts can be in German or bilingual. They must be in writing and signed by both parties."
                    },
                    {
                        "type": "paragraph",
                        "data": "A contract must include:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Name"
                            },
                            {
                                "text": "Start date"
                            },
                            {
                                "text": "Length of the employment"
                            },
                            {
                                "text": "Job description"
                            },
                            {
                                "text": "Salary"
                            },
                            {
                                "text": "Termination conditions"
                            },
                            {
                                "text": "Benefits insurance"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Probation Period",
                "data": [
                    {
                        "type": "text",
                        "data": "Probation periods are mandatory for indefinite term contracts. The maximum probation period is 90 days (3 months)."
                    }
                ]
            }
        ]
    }
}