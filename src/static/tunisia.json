    "quickStartGuide": {
        "Pay&Tax": [
            {
                "title": "Minimum Wage Requirements",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "In Tunisia, the minimum wage is complex as it varies depending on the sector of the employee."
                    },
                    {
                        "type": "paragraph",
                        "data": "For Deel, most employees will have a minimum wage of TND 1,000 per month."
                    }
                ]
            },
            {
                "title": "Individual Income Tax",
                "data": [
                    {
                        "type": "text",
                        "data": "The individual income tax ranges from 0% to 35%. Income tax is calculated according to progressive rates. Multiple additional factors may impact overall rates such as the household status and the number of children."
                    }
                ]
            },
            {
                "title": "Employer Cost",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "The employer cost is generally estimated at 21% of the employee salary."
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Social Security Employer"
                            },
                            {
                                "text": "Work accident"
                            },
                            {
                                "text": "Vocational training tax - 2.00%"
                            },
                            {
                                "text": "2nd Social Security Contribution - 1.00%"
                            },
                            {
                                "text": "The Social Housing Promotion Fund - 1.00%"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Overtime Pay & Maximum Hours",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Standard working hours are 8 hours per day, 40 hours per week. The standard workweek is from Monday to Friday."
                    },
                    {
                        "type": "paragraph",
                        "data": "Overtime payment is not mandatory and may be included in the salary. Hours outside of standard work hours are considered overtime. Employees can work a maximum of 20 hours of overtime a week. For additional hours, employees are paid between 150%-200% of the hourly wage depending on the agreement between the employee and employer."
                    }
                ]
            }
        ],
        "Leave Policy": [
            {
                "title": "Maternity Leave",
                "data": [
                    {
                        "type": "text",
                        "data": "Pregnant employees are entitled to 30 days of paid leave. Employees must have contributed at least 80 days of social security payments to be eligible. The employee will receive 66.7% of their average salary during this period, and Social Security will be responsible for this pay."
                    }
                ]
            },
            {
                "title": "Paternity Leave",
                "data": [
                    {
                        "type": "text",
                        "data": "Employees are entitled to 1 day of paid paternity leave. The employee will receive 100% of the salary during this period, and the employer will be responsible for this pay."
                    }
                ]
            },
            {
                "title": "Parental Leave",
                "data": [
                    {
                        "type": "text",
                        "data": "In Tunisia, no law covers parental leave. However, employees may be entitled to maternity leave and paternity leave."
                    }
                ]
            },
            {
                "title": "Sick Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Employees are entitled to paid sick leave for up to 180 days depending on the particular case of sickness. The first 5 days are paid by the employer at 100% of salary. The remaining leave and percent pay is calculated on a case-by-case basis."
                    },
                    {
                        "type": "table",
                        "data": [
                            {
                                "Period": "0 - 5 days",
                                "Pay": "100%",
                                "Payer": "Employer"
                            },
                            {
                                "Period": "6 up to 180 days",
                                "Pay": "dependent on a case by case basis",
                                "Payer": "Social Security"
                            }
                        ]
                    }
                ]
            }
        ],
        "Termination": [
            {
                "title": "Termination Requirements",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Terminations must respect complex rules and the rules of an employee’s employment country. The off-boarding is always handled by the Employer with the primary stakeholders. It may include ad-hoc fees as well as required or recommended steps on specific termination cases."
                    },
                    {
                        "type": "paragraph",
                        "data": "Terminations in Tunisia are complex. There is no at-will termination in Tunisia for employers outside the probation period and termination must be done for just cause. Employees have the right to appeal terminations prior to dismissal."
                    },
                    {
                        "type": "paragraph",
                        "data": "Compliant terminations include:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Voluntarily by the employee"
                            },
                            {
                                "text": "By mutual agreement"
                            },
                            {
                                "text": "Unilaterally by the employer based on:",
                                "children": [
                                    {
                                        "text": "Probation period"
                                    },
                                    {
                                        "text": "Objective grounds"
                                    },
                                    {
                                        "text": "Disciplinary dismissal"
                                    },
                                    {
                                        "text": "Performance due to unsuitability for the job"
                                    }
                                ]
                            },
                            {
                                "text": "By the expiration of the contract"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Notice Period",
                "data": [
                    {
                        "type": "text",
                        "data": "Notice period is mandatory, and the minimum notice is 1 month. It can be increased if stated in the employee agreement."
                    }
                ]
            },
            {
                "title": "Severance for Employees",
                "data": [
                    {
                        "type": "text",
                        "data": "In Tunisia, all employees who are terminated are entitled to severance pay, unless terminated for disciplinary reasons. Severance pay is 1 month of salary per year of service."
                    }
                ]
            }
        ],
        "Statutory time off": [
            {
                "title": "Paid Time Off",
                "data": [
                    {
                        "type": "text",
                        "data": "Both full-time and part-time employees are entitled to 12 working days of paid time off (PTO) a year. PTO accrues monthly at 1.75 days per month. Employees are eligible for annual leave after 1 month of work."
                    }
                ]
            },
            {
                "title": "Public Holidays",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Tunisia celebrates 12 national holidays over 15 days."
                    },
                    {
                        "type": "paragraph",
                        "data": "National public holidays include:"
                    },
                    {
                        "type": "text",
                        "data": "Islamic New Year\nThe Prophet’s birthday\nEid Al Fitr (3 days)\nEid al-Adha (2 days)\nNew Year's Day\nRevolution and Youth Day\nIndependence Day\nMartyrs' Day\nLabor Day\nRepublic Day\nWomen's Day\nEvacuation Day"
                    }
                ]
            }
        ],
        "Onboarding": [
            {
                "title": "Onboarding",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Onboarding takes 3 business days after the client signs the SOW."
                    },
                    {
                        "type": "paragraph",
                        "data": "The documents must be completed 1 day before the start date."
                    }
                ]
            }
        ],
