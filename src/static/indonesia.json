                "data": [
                    {
                        "type": "paragraph",
                        "data": "The employer cost is generally estimated at 4.24% of the employee salary."
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Provident fund - 3.70%"
                            },
                            {
                                "text": "Death Security - 0.30%"
                            },
                            {
                                "text": "Work-related accident benefit - 0.24%"
                            },
