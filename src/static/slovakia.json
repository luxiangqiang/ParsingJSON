    "quickStartGuide": {
        "Pay&Tax": [
            {
                "title": "Minimum Wage Requirements",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "In Slovakia, the base minimum wage is EUR 623 per month. The minimum monthly wage changes according to the degree of work intensity. There are 6 classes of work intensity."
                    }
                ]
            },
            {
                "title": "Individual Income Tax",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "The individual income tax ranges from 19% to 25%. Income tax is calculated according to gross annual income."
                    },
                    {
                        "type": "table",
                        "data": [
                            {
                                "Gross Annual Income": "Up to EUR 37,163.36",
                                "Tax Rate (%)": "19%"
                            },
                            {
                                "Gross Annual Income": "Over EUR 37,163.36",
                                "Tax Rate (%)": "25%"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Employer Cost",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "The employer cost is generally estimated at 36% of the employee salary."
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Social Insurance - 25.2%"
                            },
                            {
                                "text": "Health Insurance - 10.0%"
                            },
                            {
                                "text": "Daily working meal voucher - EUR 61.82"
                            },
                            {
                                "text": "Work from home allowance - EUR 50"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Overtime Pay & Maximum Hours",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Standard working hours are 8 hours per day, 40 hours per week. The standard workweek is from Monday to Friday."
                    },
                    {
                        "type": "paragraph",
                        "data": "Overtime payment is not mandatory and may be included in the salary or granted as leave. Hours outside of standard work hours are considered overtime."
                    }
                ]
            }
        ],
        "Leave Policy": [
            {
                "title": "Maternity Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Pregnant employees who have worked for 60 consecutive days with the same employer are entitled to 34 weeks of paid leave. Six weeks must be taken before the child's birth. The employee will receive 75% of their average salary during this period, and Social Security will be responsible for this pay."
                    },
                    {
                        "type": "paragraph",
                        "data": "The employee can’t extend leave."
                    }
                ]
            },
            {
                "title": "Paternity Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Employees who have contributed to Social Security for 270 days are entitled to 28 weeks of paid paternity leave. Leave must be taken six weeks after the child's birth. The remaining days can be divided into two periods until the child reaches the age of three. The employee will receive 75% of the salary during this period, and Social Security will be responsible for this pay."
                    },
                    {
                        "type": "paragraph",
                        "data": "Employees will be able to take paternity leave if the partner is not receiving maternity benefits simultaneously."
                    },
                    {
                        "type": "paragraph",
                        "data": "The employee can't extend leave."
                    }
                ]
            },
            {
                "title": "Parental Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Employees are entitled to up to 3 years of parental leave until the child reaches the age of three. Either parent can take parental leave. Social Security will pay EUR 275.90 per month during this period."
                    },
                    {
                        "type": "paragraph",
                        "data": "Employees can’t extend parental leave."
                    }
                ]
            },
            {
                "title": "Sick Leave",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Employees are entitled to paid sick leave for up to 52 weeks. This leave is paid at different rates and by different payers depending upon length:"
                    },
                    {
                        "type": "table",
                        "data": [
                            {
                                "Period": "0 - 3 days",
                                "Pay": "25% of base salary",
                                "Payer": "Employer"
                            },
                            {
                                "Period": "4 - 10 days",
                                "Pay": "55% of base salary",
                                "Payer": "Employer"
                            },
                            {
                                "Period": "11 days - 52 weeks",
                                "Pay": "70% of base salary",
                                "Payer": "Social Security"
                            }
                        ]
                    }
                ]
            }
        ],
        "Termination": [
            {
                "title": "Termination Requirements",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Terminations must respect complex rules and the rules of an employee’s employment country. The off-boarding is always handled by the Employer with the primary stakeholders. It may include ad-hoc fees as well as required or recommended steps on specific termination cases."
                    },
                    {
                        "type": "paragraph",
                        "data": "Terminations in Slovakia can be terminated by either party with or without cause providing written notice."
                    },
                    {
                        "type": "paragraph",
                        "data": "Compliant terminations include:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Voluntarily by the employee"
                            },
                            {
                                "text": "By mutual agreement"
                            },
                            {
                                "text": "Unilaterally by the employer based on:",
                                "children": [
                                    {
                                        "text": "Probation period"
                                    },
                                    {
                                        "text": "Objective grounds"
                                    },
                                    {
                                        "text": "Disciplinary dismissal"
                                    },
                                    {
                                        "text": "Performance due to unsuitability for the job"
                                    }
                                ]
                            },
                            {
                                "text": "By the expiration of the contract"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Notice Period",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Notice will depend on the length of employment and if the employee resigns or is dismissed."
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "",
                                "children": [
                                    {
                                        "text": "30 days for up to one year of employment"
                                    },
                                    {
                                        "text": "60 days for one to five years of employment"
                                    },
                                    {
                                        "text": "90 days for over five years of employment"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "",
                                "children": [
                                    {
                                        "text": "30 days for up to one year of employment"
                                    },
                                    {
                                        "text": "60 days for more than one year of employment"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Severance for Employees",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "In Slovakia, employees who are terminated with notice are entitled to severance pay. Severance pay will depend on the length of employment:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "From one to five years of service - one month salary"
                            },
                            {
                                "text": "From five to ten years of service - two months salary"
                            }
                        ]
                    },
                    {
                        "type": "paragraph",
                        "data": "Severance pay may increase if the reasons for dismissal are not adequate."
                    }
                ]
            }
        ],
        "Statutory time off": [
            {
                "title": "Paid Time Off",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Both full-time and part-time employees are entitled to 20 working days of paid time off (PTO) a year. PTO and accrual rates vary depending on the age of the employee."
                    },
                    {
                        "type": "table",
                        "data": [
