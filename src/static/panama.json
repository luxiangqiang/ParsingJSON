    "quickStartGuide": {
        "Pay&Tax": [
            {
                "title": "Minimum Wage Requirements",
                "data": [
                    {
                        "type": "text",
                        "data": "The minimum wage will depend on the sector of the company and can range from USD 275 to USD 970. For Deel, the minimum monthly wage is USD 611.52."
                    }
                ]
            },
            {
                "title": "Individual Income Tax",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "The individual income tax ranges from 0% to 25%. Income tax is calculated according to progressive rates."
                    },
                    {
                        "type": "table",
                        "data": [
                            {
                                "Gross Annual Income": "Up to USD 11,000",
                                "Tax Rate (%)": "0%"
                            },
                            {
                                "Gross Annual Income": "Up to USD 50,000",
                                "Tax Rate (%)": "15%"
                            },
                            {
                                "Gross Annual Income": "Over USD 50,000",
                                "Tax Rate (%)": "25%"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Employer Cost",
                "data": [
                    {
                        "type": "text",
                        "data": "The employer cost is generally estimated at 38% of the employee salary (inclusive of work-from-home allowance)."
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Social security - 12.25%"
                            },
                            {
                                "text": "Educational security - 1.50%"
                            },
                            {
                                "text": "Professional risks - 2.10%"
                            },
                            {
                                "text": "13th Salary - 8.33%"
                            },
                            {
                                "text": "Vacation pay - 9.09%"
                            },
                            {
                                "text": "Seniority premium - 1.92%"
                            },
                            {
                                "text": "Compensation - 0.33%"
                            },
                            {
                                "text": "Work-from-home Allowance USD 50"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Overtime Pay & Maximum Hours",
                "data": [
                    {
                        "type": "text",
                        "data": "Overtime payment is mandatory. Hours outside of standard work hours are considered overtime. Employees can work up to three extra hours per day. For additional hours, employees are paid:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "125% of the hourly rate, on a standard day"
                            },
                            {
                                "text": "150% of the hourly rate, after 6 pm"
                            },
                            {
                                "text": "175% of the hourly rate for the night shift employees"
                            }
                        ]
                    },
                    {
                        "type": "paragraph",
                        "data": "Standard working hours are eight hours per day, 40 hours per week. The standard workweek is from Monday to Friday. However, the standard workweek can be extended to 48 hours per week from Monday to Saturday."
                    }
                ]
            }
        ],
        "Leave Policy": [
            {
                "title": "Maternity Leave",
                "data": [
                    {
                        "type": "text",
                        "data": "Pregnant employees who have worked for 60 consecutive days are entitled to 14 weeks of paid leave. Four weeks must be taken before the child's birth. The employee will receive 100% of their average salary during this period, and Social Security will be responsible for this pay."
                    },
                    {
                        "type": "text",
                        "data": "The employee may extend leave unpaid at the employer's sole discretion."
                    }
                ]
            },
            {
                "title": "Paternity Leave",
                "data": [
                    {
                        "type": "text",
                        "data": "Employees are entitled to 3 days of paid paternity leave that must be taken after the child's birth. The employee will receive 100% of their average salary during this period, and the employer will be responsible for this pay."
                    }
                ]
            },
            {
                "title": "Sick Leave",
                "data": [
                    {
                        "type": "text",
                        "data": "Employees are entitled to paid sick leave for up to either 18 or 36 days depending on the seniority of the employee."
                    }
                ]
            }
        ],
        "Termination": [
            {
                "title": "Termination Requirements",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Terminations must respect complex rules and the rules of an employee’s employment country. The off-boarding is always handled by the Employer with the primary stakeholders. It may include ad-hoc fees as well as required or recommended steps on specific termination cases."
                    },
                    {
                        "type": "paragraph",
                        "data": "Terminations in Panama can be complex. There is no at-will termination outside the probation period and termination must be done for just cause. In case the employee considers the termination an unfair dismissal, they will have up to 60 days to sue the employer."
                    },
                    {
                        "type": "paragraph",
                        "data": "Compliant terminations include:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Voluntarily by the employee"
                            },
                            {
                                "text": "By mutual agreement",
                                "children": [
                                    {
                                        "text": "Must be in writing and should not waive any employment rights"
                                    }
                                ]
                            },
                            {
                                "text": "Termination with cause"
                            },
                            {
                                "text": "Unilaterally by the employer:",
                                "children": [
                                    {
                                        "text": "For indefinite employment agreements must be for cause and in writing"
                                    }
                                ]
                            },
                            {
                                "text": "For the completion of the work"
                            },
                            {
                                "text": "By the expiration of the contract"
                            },
                            {
                                "text": "Due to the death of the employee or employer"
                            }
                        ]
                    },
                    {
                        "type": "paragraph",
                        "data": "Special cases and circumstances may apply including requiring the employer to get authorization from the relevant administrative labor authority."
                    }
                ]
            },
            {
                "title": "Notice Period",
                "data": [
                    {
                        "type": "text",
                        "data": "The minimum notice period is 15 days and will vary according to the reason for the termination:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Generally, 15 days if the employee resigns"
                            },
                            {
                                "text": "Generally, 30 days if the employer terminates the employee"
                            }
                        ]
                    },
                    {
                        "type": "text",
                        "data": "Special cases and circumstances may apply, including having the notice signed by the relevant administrative labor authority. Notice can be replaced by paying the equivalent in salary."
                    }
                ]
            },
            {
                "title": "Severance for Employees",
                "data": [
                    {
                        "type": "text",
                        "data": "In Panama, all employees are entitled to severance pay unless the termination is due to a disciplinary dismissal."
                    },
                    {
                        "type": "text",
                        "data": "Severance pay is complex and will depend on the reason for the termination, type of contract (fixed-term or indefinite term), and length of the labor relationship."
                    }
                ]
            }
        ],
        "Statutory time off": [
            {
                "title": "Paid Time Off",
                "data": [
                    {
                        "type": "text",
                        "data": "Both full-time and part-time employees are entitled to 30 calendar days of paid time off (PTO) a year. PTO accrues monthly at 2.72 days per month. Employees are eligible for 15 calendar days of annual leave after 5.5 months of work."
                    }
                ]
            },
            {
                "title": "Public Holidays",
                "data": [
                    {
                        "type": "text",
                        "data": "Panama celebrates 8 national holidays. National public holidays include:"
                    },
                    {
                        "type": "text",
                        "data": "New Year’s Day\nMartyrs Day\nTuesday of Carnival\nHoly Friday \nLabor Day\nNational Holidays (4 days) \nMother’s Day\nChristmas"
                    },
                    {
                        "type": "paragraph",
                        "data": "Additionally, every five years, there is an additional holiday for the day the President of the Republic of Panama is elected."
                    }
                ]
            }
        ],
        "Onboarding": [
            {
                "title": "Onboarding",
                "data": [
                    {
                        "type": "text",
                        "data": "Onboarding takes three business days. If the employee has no Social Security Number, the onboarding will be delayed at least seven business days."
                    }
                ]
            }
        ],
        "Additional info": [
            {
                "title": "Employment Contract Details",
                "data": [
                    {
                        "type": "paragraph",
                        "data": "Contracts must be in Spanish and can be bilingual. They must be in writing and signed by both parties. A contract must include:"
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Name"
                            },
                            {
                                "text": "Start date"
                            },
                            {
                                "text": "Length of the employment"
                            },
                            {
                                "text": "Job description"
                            },
                            {
                                "text": "Termination conditions"
                            },
                            {
                                "text": "Holiday entitlement and pay"
                            },
                            {
                                "text": "Salary and any other supplements"
                            },
                            {
                                "text": "Working hours"
                            },
                            {
                                "text": "Length of breaks"
                            },
                            {
                                "text": "Special working-hour arrangement is pursuant to the provisions concerning reduced working hours, flexible working hours, etc."
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Probation Period",
                "data": [
                    {
                        "type": "text",
                        "data": "Employees hired using Deel have a probation period of 90 days, this cannot be extended as it is the country maximum. As of January 2022, it's Deel company policy to include probation periods in all employment contracts moving forward."
                    },
                    {
                        "type": "text",
                        "data": "Probation periods help an employer and the employee ensure they're a hiring match, allowing a company to quickly decide if it's a fit or the employee to see if the job aligns with their career goals."
                    }
                ]
            }
        ]
    }
}