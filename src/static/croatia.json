                "data": [
                    {
                        "type": "paragraph",
                        "data": "The employer cost is generally estimated at 16.5% of the employee salary."
                    },
                    {
                        "type": "nested_list",
                        "data": [
                            {
                                "text": "Health insurance - 16.5%"
                            }
                        ]
                    }
                ]
            },
            {
                "title": "Overtime Pay & Maximum Hours",
                "data": [
                    {
                        "type": "text",
